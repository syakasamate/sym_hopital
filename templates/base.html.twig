<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        {% endblock %}
                <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>
    <body>
        {% block body %}
        {% block nav %}
            <nav id="main-nav" class="container navbar navbar-expand-lg navbar-light bg-light border rounded mb-3">
                <ul class="navbar-nav">
                    <li class="nav-item {% if Home is defined %}active{% endif %}">
                        <a class="nav-link" href="{{path('acceuil')}}"><i class="fas fa-home"></i>Accueil</a>
                    </li>
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item {% if addservice is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('admin.service.add')}}">Ajout service</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item {% if sowservice is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('admin.service.show')}}">Liste service</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item {% if addspecialite is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('admin.specialite.addSp')}}">Ajout specialite</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item {% if sowspecialite  is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('admin.specialite.show')}}">Liste specialite</a>
                        </li>
                    {% endif %}
                   {% if is_granted('ROLE_USER') %}
                        <li class="nav-item {% if addmedecin is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('admin.Medecin.addM')}}">Ajout medecin</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item {% if sowmedecin is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('admin.medecin.show')}}">Liste medecin</a>
                        </li>
                    
                    {% endif %}
                </ul>
                <ul class="navbar-nav ml-auto">
                    {% if  app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('logout')}}"><i class="fas fa-sign-out-alt"></i>DÃ©connexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item {% if login is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('login_form')}}"><i class="fas fa-lock"></i>Connexion</a>
                        </li>
                        <li class="nav-item {% if  connection is defined %}active{% endif %}">
                            <a class="nav-link" href="{{path('connection')}}"><i class="fas fa-sign-in-alt"></i>Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endblock %}

        {% block flash %}
            {% for flash_message in app.session.flashbag.get('success') %}
                <div class="container alert alert-success" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('info') %}
                <div class="container alert alert-info" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('warning') %}
                <div class="container alert alert-warning" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('danger') %}
                <div class="container alert alert-danger" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
        {% endblock %}
        {% endblock %}
       
         {% block javascripts %} 
       <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
     {% endblock %}
